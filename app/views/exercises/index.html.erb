<h1>Listing exercises</h1>
<br>
<%= link_to 'New Exercise', new_exercise_path %><div> </div><%= link_to 'Generate Workout', generator_path %>
<br>
<table>
  <thead>
    <tr>
      <th>Move</th>
      <th>Bodypart</th>
      <th>Reps</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%= exercise.move.titleize %></td>
        <td><%= exercise.bodypart.titleize %></td>
        <td><%= exercise.reps %></td>
        <% if exercise.description != nil %><td>-</td><% else %><td><%= exercise.description %></td><% end %> 
        <td><!--<a href='/exercises/<#%= exercise[:id] %>'>show 2</a>--><%= link_to 'Show', exercise %></td>
        <td><%= link_to 'Edit', edit_exercise_path(exercise) %></td>
        <td><%= link_to 'Destroy', exercise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

