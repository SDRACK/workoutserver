<h1>Listing routines</h1>

<table>
  <thead>
    <tr>
      <th>Move</th>
      <th>Bodypart</th>
      <th>Reps</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routines.each do |routine| %>
      <tr>
        <td><%= routine.move %></td>
        <td><%= routine.bodypart %></td>
        <td><%= routine.reps %></td>
        <td><%= link_to 'Show', routine %></td>
        <td><%= link_to 'Edit', edit_routine_path(routine) %></td>
        <td><%= link_to 'Destroy', routine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Routine', new_routine_path %>

 <table border="1">
  <tr>
  <th><%= "Exercise" %></th>
  <th><%= "Body part" %></th>
  </tr>
  <% @generator.each do |mv, bp,r|  %>
  <tr>
    <td> <%= mv %> </td> 
    <td><i> <%= bp %> </i></td> 
    <td><i> <%= r %> </i></td> 
   </tr>
  <% end %>
</table>
    

    
